
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>
<div id="loading" class="modal fade " tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="text-center" style="margin:20px; padding:20px">
                <img style="align-content:center" src="~/images/ajax-loader.gif" />
            </div>
            
        </div>
    </div>
</div>
<form class="form-horizontal">
    <div class="form-group">
        @*<div class="col-sm-10">
            <input type="text" class="form-control" id="inpMobileNo" placeholder="Mobile Number">
        </div>*@
        <div class="input-group">
            <div class="input-group-addon">+62</div>
            <input type="text" class="form-control" id="inpMobileNo" placeholder="Mobile Number">
          
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inpFirstName" placeholder="First Name">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inpLastName" placeholder="Last Name">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <div class="form-inline">
                <select style="max-width:120px" class="form-control" id="selMonth">
                    <option value="01">January</option>
                    <option value="02">February</option>
                    <option value="03">March</option>
                    <option value="04">April</option>
                    <option value="05">May</option>
                    <option value="06">June</option>
                    <option value="07">July</option>
                    <option value="08">August</option>
                    <option value="09">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>

                <input type="text" style="max-width:60px" class="form-control" id="inpdateDOB" placeholder="Date">
                <input type="text" style="max-width:60px" class="form-control" id="inpYearDOB" placeholder="Year">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <div class="form-inline">
                <input type="radio" id="rdMale" name="gender" value="M">
                <label for="male">Male</label><br>
                <input type="radio" id="rdFemale" name="gender" value="F">
                <label for="female">Female</label><br>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inpEmail" placeholder="Email">
        </div>
    </div>
    <div class="form-group">
        <div class=" col-sm-10">
            <button type="button" style="background-color:purple; color:white" id="btnRegister" class="btn btn-default">Register</button>
            <a href="~/Registration/Login" style="display:none; background-color:purple;color:white" id="btnLogin" class="btn btn-default">Login</a>
           
        </div>
    </div>

</form>
<link href="~/Content/toastr.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/toastr.js"></script>
<script src="~/Scripts/loadingView.js"></script>
<script src="~/Scripts/Register.js"></script>
